<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/senderUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From sender username"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="167dp" />

        <TextView
            android:id="@+id/pickUpTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick up time: 1:30 pm"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="194dp" />

        <TextView
            android:id="@+id/receiverUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To receiver username"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="232dp" />

        <TextView
            android:id="@+id/dropOffTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop off time: 4 pm"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="268dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Description"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="312dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>